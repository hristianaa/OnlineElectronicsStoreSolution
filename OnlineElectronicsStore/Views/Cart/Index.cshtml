@model IEnumerable<OnlineElectronicsStore.Models.CartItem>

@{
    ViewData["Title"] = "Your Cart";
}

<h1>Your Cart</h1>

@if (User.Identity.IsAuthenticated)
{
    if (!Model.Any())
    {
        <p>Your cart is empty.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Qty</th>
                    <th>Unit Price</th>
                    <th>Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Product.Price.ToString("C")</td>
                        <td>@(item.Quantity * item.Product.Price).ToString("C")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Remove" asp-route-id="@item.Id">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <a asp-action="Add" asp-route-productId="" class="btn btn-primary">Add Product</a>
}
else
{
    <p>@ViewBag.Message</p>
    <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Log in</a>
}
