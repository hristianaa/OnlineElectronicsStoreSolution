@model OnlineElectronicsStore.Models.CartItem

@{
    ViewData["Title"] = "Add to Cart";
    var product = (OnlineElectronicsStore.Models.Product)ViewBag.Product;
}

<h1>Add “@product.Name” to your Cart</h1>

<form asp-action="Add" method="post">
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group">
        <label>Quantity</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Add</button>
    <a asp-action="Index" class="btn btn-link">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
