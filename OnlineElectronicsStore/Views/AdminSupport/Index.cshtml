@model IEnumerable<OnlineElectronicsStore.Models.SupportMessage>
@{
    ViewData["Title"] = "Support Messages";
}

<h1>Support Messages</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Submitted On</th>
            <th>Name</th>
            <th>Email</th>
            <th>Message Preview</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var msg in Model)
        {
            <tr>
                <td>@msg.Id</td>
                <td>@msg.SubmittedOn.ToLocalTime().ToString("g")</td>
                <td>@msg.Name</td>
                <td>@msg.Email</td>
                <td>
                    @(
                        msg.Message.Length > 50
                        ? msg.Message.Substring(0, 50) + "…"
                        : msg.Message
                        )
                </td>
                <td>
                    <a asp-action="Details"
                       asp-route-id="@msg.Id"
                       class="btn btn-sm btn-info">
                        View
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
