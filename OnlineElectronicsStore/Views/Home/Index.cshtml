@{
    ViewData["Title"] = "Home";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"
      rel="stylesheet" />

<style>
    /* Fullscreen Hero */
    .hero {
        position: relative;
        background: url('/images/hero.jpg') center/cover no-repeat;
        height: 100vh;
        color: #fff;
    }

        .hero::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, rgba(0,0,0,0.6), rgba(0,0,0,0.2));
        }

        .hero .content {
            position: relative;
            top: 50%;
            transform: translateY(-50%);
            text-align: center;
        }

        .hero .btn-cta {
            padding: 0.75rem 2rem;
            font-size: 1.25rem;
        }

    .scroll-down {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        font-size: 2rem;
        animation: bounce 2s infinite;
        color: #fff;
    }

    @@keyframes bounce {
        0%, 100%

    {
        transform: translate(-50%, 0);
    }

    50% {
        transform: translate(-50%, 10px);
    }

    }

    /* Split Section */
    .split {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        margin: 5rem 0;
        align-items: center;
    }

        .split img {
            max-width: 100%;
            border-radius: 0.5rem;
        }

    /* Feature Grid */
    .features .icon {
        font-size: 3rem;
        color: #0d6efd;
    }

    .features .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 24px rgba(0,0,0,0.1);
    }

    /* Footer CTA */
    .footer-cta {
        background: #0d6efd;
        color: #fff;
        padding: 4rem 0;
        text-align: center;
    }
</style>

<div class="hero">
    <div class="content container">
        <h1 class="display-2 fw-bold">ElectroShop</h1>
        <p class="lead mb-4">Next-gen electronics for the innovators of tomorrow.</p>
        <a class="btn btn-light btn-cta" asp-controller="Products" asp-action="Index">
            Start Exploring
        </a>
    </div>
    <a href="#offer" class="scroll-down">
        <i class="bi bi-chevron-compact-down"></i>
    </a>
</div>

<div id="offer" class="container split">
    <div class="col-lg-6">
        <img src="/images/teaser-products.jpg" alt="Our Products" />
    </div>
    <div class="col-lg-6">
        <h2>Curated Collections</h2>
        <p>
            From gaming rigs to studio gear, our expert-picked collections have
            everything you need—handpicked for quality and performance.
        </p>
        <a class="btn btn-primary" asp-controller="Products" asp-action="Index">
            View Collections
        </a>
    </div>
</div>

<div class="container features my-5">
    <h3 class="text-center mb-4">Why Shop With Us?</h3>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card p-4 text-center h-100">
                <i class="bi bi-speedometer2 icon"></i>
                <h5 class="mt-3">Blazing Performance</h5>
                <p>High-end specs to keep you ahead of the curve.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4 text-center h-100">
                <i class="bi bi-life-preserver icon"></i>
                <h5 class="mt-3">Expert Support</h5>
                <p>Our tech advisors are here 24/7 for your success.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4 text-center h-100">
                <i class="bi bi-truck icon"></i>
                <h5 class="mt-3">Fast Delivery</h5>
                <p>Get your gear delivered to your door—fast & free.</p>
            </div>
        </div>
    </div>
</div>

<div class="footer-cta">
    <h4 class="mb-3">Ready to upgrade your setup?</h4>
    <a class="btn btn-light btn-lg" asp-controller="Products" asp-action="Index">
        Shop Now
    </a>
</div>
