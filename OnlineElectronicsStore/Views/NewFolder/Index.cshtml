@model IEnumerable<OnlineElectronicsStore.Models.Product>
@{
    ViewData["Title"] = "Products";
}
<h2>All Products</h2>
<div class="row">
    @foreach (var p in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <img src="@p.MainImageUrl" class="card-img-top" />
                <div class="card-body d-flex flex-column">
                    <h5>@p.Name</h5>
                    <p class="text-truncate">@p.ShortDescription</p>
                    <a asp-action="Details" asp-route-id="@p.Id" class="mt-auto btn btn-sm btn-primary">View</a>
                </div>
            </div>
        </div>
    }
</div>
