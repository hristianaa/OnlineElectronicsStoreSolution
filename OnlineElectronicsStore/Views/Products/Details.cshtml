@model OnlineElectronicsStore.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<h1>@Model.Name</h1>

<div>
    <img src="@Model.MainImageUrl" alt="@Model.Name" class="img-fluid" />
</div>

<dl class="row">
    <dt class="col-sm-2">Short Description</dt>
    <dd class="col-sm-10">@Model.ShortDescription</dd>

    <dt class="col-sm-2">Long Description</dt>
    <dd class="col-sm-10">@Model.LongDescription</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.Category?.Name</dd>
</dl>

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
