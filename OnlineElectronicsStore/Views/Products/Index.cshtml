@model IEnumerable<OnlineElectronicsStore.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<h1>@ViewData["Title"]</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Add New Product</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td style="width:120px;">
                    @if (!string.IsNullOrEmpty(p.MainImageUrl))
                    {
                        <img src="@p.MainImageUrl" alt="Main image" style="max-width:100px; max-height:75px;" />
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </td>
                <td>@p.Name</td>
                <td>@p.Price.ToString("C")</td>
                <td>@p.Category?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@p.Id">View</a> |
                    <a asp-action="Edit" asp-route-id="@p.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@p.Id">Delete</a>
                </td>
            </tr>
            @* Optionally show additional photos in a second row *@
            @if (p.Photos?.Any() == true)
            {
                <tr>
                    <td colspan="5" class="ps-5">
                        @foreach (var photo in p.Photos)
                        {
                            <img src="@photo.Url" alt="Photo @photo.Id"
                                 style="max-width:75px; max-height:75px; margin-right:8px;" />
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

