@model OnlineElectronicsStore.Models.ViewModels.OrderDetailsViewModel

@{
    ViewData["Title"] = $"Order #{Model.Id}";
}

<h1>Order #@Model.Id</h1>
<p><strong>Date:</strong> @Model.CreatedOn.ToString("g")</p>
<p><strong>Status:</strong> @Model.Status</p>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Qty</th>
            <th>Unit Price</th>
            <th>Line Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("C")</td>
                <td>@item.LineTotal.ToString("C")</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3" class="text-end">Total:</th>
            <th>@Model.Total.ToString("C")</th>
        </tr>
    </tfoot>
</table>

<a asp-action="History" class="btn btn-secondary">Back to History</a>
