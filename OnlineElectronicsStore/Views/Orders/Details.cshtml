@model OnlineElectronicsStore.DTOs.OrderDto
@{
    ViewData["Title"] = "Order Details";
}

<h1>Order #@Model.Id</h1>
<p><strong>Date:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
<p><strong>Status:</strong> @Model.Status</p>

<h2>Items</h2>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Qty</th>
            <th>Unit Price</th>
            <th>Line Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Items)
        {
            <tr>
                <td>@line.ProductName</td>
                <td>@line.Quantity</td>
                <td>@line.UnitPrice.ToString("C")</td>
                <td>@(line.Quantity * line.UnitPrice).ToString("C")</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-end"><strong>Total:</strong></td>
            <td>@Model.Total.ToString("C")</td>
        </tr>
    </tfoot>
</table>

<a asp-action="History" class="btn btn-secondary">Back to History</a>
